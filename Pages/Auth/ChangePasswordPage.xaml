<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ecommerce_app.Pages.Auth.ChangePasswordPage"
             Title="Change Password">
    <StackLayout Padding="20" Spacing="16">
        <Label Text="Update your password here" FontSize="18" />
        <Entry x:Name="CurrentPasswordEntry" Placeholder="Current Password" IsPassword="True" />
        <Entry x:Name="NewPasswordEntry" Placeholder="New Password" IsPassword="True" />
        <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True" />

        <Button Text="Save" Clicked="OnSaveButtonClicked" />
    </StackLayout>
</ContentPage>
